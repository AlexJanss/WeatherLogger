{% extends 'base.html.twig' %}

{% block title %}WeatherData{% endblock %}

{% block body %}
    <h1>WeatherData</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather_datum.id }}</td>
            </tr>
            <tr>
                <th>Temp_K</th>
                <td>{{ weather_datum.tempK }}</td>
            </tr>
            <tr>
                <th>Humidity_percentage</th>
                <td>{{ weather_datum.humidityPercentage }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ weather_datum.time ? weather_datum.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather_datum.date ? weather_datum.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ weather_datum.createdAt ? weather_datum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('weather_data_index') }}">back to list</a>

    <a href="{{ path('weather_data_edit', {'id': weather_datum.id}) }}">edit</a>

    {{ include('weather_data/_delete_form.html.twig') }}
{% endblock %}
