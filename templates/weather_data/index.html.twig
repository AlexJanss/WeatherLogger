{% extends 'base.html.twig' %}

{% block title %}WeatherData index{% endblock %}

{% block body %}
    <h1>WeatherData index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Temp_K</th>
                <th>Humidity_percentage</th>
                <th>Time</th>
                <th>Date</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather_datum in weather_datas %}
            <tr>
                <td>{{ weather_datum.id }}</td>
                <td>{{ weather_datum.tempK }}</td>
                <td>{{ weather_datum.humidityPercentage }}</td>
                <td>{{ weather_datum.time ? weather_datum.time|date('H:i:s') : '' }}</td>
                <td>{{ weather_datum.date ? weather_datum.date|date('Y-m-d') : '' }}</td>
                <td>{{ weather_datum.createdAt ? weather_datum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('weather_data_show', {'id': weather_datum.id}) }}">show</a>
                    <a href="{{ path('weather_data_edit', {'id': weather_datum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('weather_data_new') }}">Create new</a>
{% endblock %}
